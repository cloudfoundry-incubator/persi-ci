#!/bin/bash -eu

set -e -x -u

mkdir -p bosh-env
bbl --iaas=${BBL_IAAS} --state-dir director-state/${BBL_STATE_DIR} print-env > bosh-env/set-env.sh
bbl --iaas=${BBL_IAAS} --state-dir director-state/${BBL_STATE_DIR} ssh-key > bosh-env/ssh-key
bbl --iaas=${BBL_IAAS} --state-dir director-state/${BBL_STATE_DIR} director-ca-cert > bosh-env/ca-cert.pem

